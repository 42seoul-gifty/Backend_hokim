<%- include ('./nav.ejs') %>
<section class="main-section">
  <div>
    <p class="main-nav-title">
      <a href="/admin/user">회원 관리</a> >
      <a href="/admin/user/detail/<%= order.user_id%>">회원 정보</a> > 주문 정보
    </p>
    <p class="main-title-deep">주문 정보</p>
  </div>
  <div class="blue-h-line"></div>
  <div class="button-group">
    <table class="table table-hover">
      <tr>
        <th>보내는 분 이름</th>
        <td><%= order.giver_name%></td>
      </tr>
      <tr>
        <th>보내는 분 번호</th>
        <td><%= order.giver_phone%></td>
      </tr>
      <tr>
        <th>결제금액</th>
        <td><%= order.paid_amount%></td>
      </tr>
      <tr>
        <th>결제시간</th>
        <td><%= paidData.paid_at%></td>
      </tr>
      <tr>
        <th>결제방법</th>
        <td><%= paidData.provider%></td>
      </tr>
      <tr>
        <th>결제상태</th>
        <td><%= order.status%></td>
      </tr>

      <tr>
        <th>받는분</th>
        <td>
          <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">No</th>
                <th scope="col">이름</th>
                <th scope="col">번호</th>
                <th scope="col">주소</th>
                <th scope="col">선택 제품</th>
              </tr>
            </thead>
            <tbody id="order_list">
              <% receivers.forEach((receiver, index)=>{ %>
              <tr>
                <td scope="col"><%=index + 1%></td>
                <td scope="col">
                  <p
                    class="btn btn-light btn-resign"
                    id="${user.id}"
                    onclick="location.href='/admin/receiver/detail/<%=receiver.id%>'"
                  >
                    <%=receiver.name%>
                  </p>
                </td>
                <td scope="col"><%=receiver.phone%></td>
                <td scope="col">
                  <%=receiver.address%>, <%=receiver.detail_address%>
                </td>
                <td scope="col">
                  <%=receiver.Product? receiver.Product.name : "-" %>
                </td>
              </tr>

              <% }) %>
            </tbody>
          </table>

          <%= %>
        </td>
      </tr>
    </table>
    <button style="margin: 5% 40%" type="button" class="btn btn-primary">
      수정하기
    </button>
  </div>
</section>
<script>
  console.log(document.referrer);
</script>
