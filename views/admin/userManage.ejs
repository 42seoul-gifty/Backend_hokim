<script src="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.4/pagination.min.js"></script>
<link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/paginationjs/2.1.4/pagination.css"
/>
<script src="https://use.fontawesome.com/releases/v5.2.0/js/all.js"></script>

<%- include ('./nav.ejs') %>

<div id="page" value="" order="" hidden><%=page%></div>

<section class="main-section">
  <div><p class="main-title">회원 관리</p></div>
  <div class="blue-h-line"></div>
  <div class="button-group">
    <table id="select">
      <tr></tr>
      <tr>
        <td class="manage">
          <input
            id="start"
            type="text"
            name="start"
            class="form-control"
            placeholder="이메일로 검색"
          />
        </td>

        <td>
          <button
            type="button"
            class="btn blue-button"
            style="margin-left: 5px; height: 40px"
            id="filter"
          >
            검색
          </button>
        </td>
        <td>
          <div style="margin-left: 30px" id="pagination"></div>
        </td>
      </tr>
    </table>
  </div>

  <div class="table-group">
    <table id="select" style="float: right; padding-bottom: 10px">
      <tr>
        <td>
          <div style="margin-left: 30px" id="pagination"></div>
        </td>
      </tr>
    </table>
    <table class="table table-hover">
      <thead>
        <tr>
          <th scope="col" style="width: 60px">
            No <i class="fas fa-sort" id="id"></i>
          </th>
          <th scope="col">이메일 <i class="fas fa-sort" id="email"></i></th>
          <th scope="col" style="width: 120px">
            회원명 <i class="fas fa-sort" id="nickname"></i>
          </th>
          <th scope="col">가입일 <i class="fas fa-sort" id="createdAt"></i></th>
          <th scope="col" style="width: 120px">
            구매횟수 <i class="fas fa-sort" id="order_count"></i>
          </th>
          <th scope="col" style="width: 120px">
            구매금액 <i class="fas fa-sort" id="order_amount"></i>
          </th>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody id="user_list"></tbody>
    </table>
  </div>
  <div id="button-group" style="margin-bottom: 10px">
    <div id="page-container" style="text-align: center"></div>
    <br />
    <br />
    <br />
    <br />
  </div>
</section>
<script type="module" src="/javascripts/admin/fillUserManage.js"></script>
